<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE pam_mount SYSTEM "pam_mount.conf.xml.dtd">
<pam_mount>
	<debug enable="0" />
	<volume fstype="nfs" server="192.168.42.13" path="/srv/homes/%(USER)" mountpoint="~" options="sec=sys,nolock" pgrp="Lounge Users" />
	<volume fstype="nfs" server="192.168.42.13" path="/srv/ydrive" mountpoint="/mnt/ydrive" options="nolock" pgrp="Lounge Users" />
	<mntoptions allow="nosuid,nodev,nolock,loop,encryption,fsck,nonempty,allow_root,allow_other" />
	<mntoptions require="nosuid,nodev,nolock" />
	{% if ansible_hostname == 'carbon' %}
	<logout wait="0" hup="0" term="0" kill="0" />
	{% else %}
	<logout wait="3000" hup="0" term="1" kill="1" />
	{% endif%}
	<mkmountpoint enable="1" remove="true" />
</pam_mount>
